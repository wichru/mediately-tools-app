<p id="notice"><%= notice %></p>

<h1>Tools</h1>

<% if @tools.present? %>
  <table>
    <thead>
      <tr>
        <th>Tool name</th>
        <th>Language</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @tools.each do |tool| %>
        <tr>
          <td><%= tool.name %></td>
          <td><%= tool.language %></td>
          <td><%= link_to 'Show', tool %> | </td>
          <td><%= link_to 'Edit', edit_tool_path(tool) %> | </td>
          <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

